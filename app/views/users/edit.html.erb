<div class="flex flex-col items-center lg:mt-8">
  <h2 class="text-3xl lg:text-4xl font-semibold text-brand-950 my-5">Mon Profil</h2>
  <%= form_with model: current_user, url: user_path(current_user), builder: TailwindBuilder, class: 'w-full flex flex-col items-center space-y-4 lg:ml-32' do |f| %>
    <div class="w-full flex flex-col items-center lg:items-start">
      <span class="text-lg lg:text-2xl font-semibold text-black my-4 lg:my-6">Informations personnelles</span>
      <div class="w-full flex flex-col items-center lg:items-start space-y-4">
        <div class="flex flex-col">
          <%= f.label :email %>
          <%= f.email_field :email %>
        </div>
        <div class="flex flex-col">
          <%= f.label :password, 'Nouveau mot de passe' %>
          <span class="text-xs">6 caractères minimum</span>
          <%= f.password_field :password, autocomplete: 'new-password' %>
        </div>
        <div class="flex flex-col">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: 'new-password' %>
        </div>
      </div>
    </div>
    <div class="w-full flex flex-col items-center lg:items-start">
      <span class="text-lg lg:text-2xl font-semibold text-black my-4 lg:my-6">Ma micro-entreprise</span>
      <div class="flex flex-col">
        <%= f.label :average_daily_rate %>
        <%= f.number_field :average_daily_rate %>
      </div>
    </div>
    <div class="pt-5 lg:pt-8 w-full flex justify-center lg:justify-start">
      <%= f.submit 'Mettre à jour' %>
    </div>
  <% end %>
</div>
