<div class="flex flex-col" data-controller="switch-class">
  <div class="flex justify-between items-center cursor-pointer" data-action="click->switch-class#trigger">
    <h3 class="text-gray-900 lg:text-2xl font-semibold select-none"><%= question %></h3>
    <div>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-gray-900 block cursor-pointer" data-switch-class-target="element" data-active-class="block" data-inactive-class="hidden">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
      </svg>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-gray-900 hidden cursor-pointer" data-switch-class-target="element" data-active-class="block" data-inactive-class="hidden">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 15.75l7.5-7.5 7.5 7.5" />
      </svg>
    </div>
  </div>
  <p class="text-gray-600 mt-7 hidden" data-switch-class-target="element" data-active-class="block" data-inactive-class="hidden"><%= answer %></p>
  <hr class="h-px my-6 lg:my-8 bg-gray-200 border-0">
</div>
