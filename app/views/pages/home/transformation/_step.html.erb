<div class="rounded-lg bg-brand-50 flex flex-col space-y-16 lg:space-y-0 lg:flex-row py-8 lg:py-10 px-6 lg:px-16">
  <div class="lg:w-1/2 flex flex-col space-y-5 lg:space-y-8">
    <div class="inline-flex space-x-3 items-center lg:items-baseline">
      <span class="text-3xl lg:text-5xl text-brand-700 font-bold lg:font-extrabold"><%= step %>.</span>
      <span class="text-lg lg:text-xl font-medium text-brand-950"><%= title %></span>
    </div>
    <div class="flex flex-col space-y-3">
      <% details.each do |detail| %>
        <div class="inline-flex items-center space-x-2">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-3.5 lg:w-4 text-brand-700">
            <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
          </svg>
          <span class="w-11/12 text-sm lg:text-base"><%= detail %></span>
        </div>
      <% end %>
    </div>
  </div>
  <div class="lg:w-1/2">
    <%= image_tag "#{image}.gif", class:'lg:h-72' %>
  </div>
</div>
