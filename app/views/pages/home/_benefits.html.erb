<!-- Les bénéfices ne sont pas les fonctionnalités. Il faut décrire ce que ça va apporter à l'utilisateur -->
<section id="features" class="bg-slate-100 flex flex-col space-y-12 lg:space-y-28 py-14 lg:py-24 px-6 lg:px-44">
  <h2 class="text-gray-900 text-center text-2xl lg:text-5xl lg:leading-normal font-semibold"><%= t('.title') %></h2>
  <div class="w-full grid grid-cols-1 lg:grid-cols-3 gap-16 lg:gap-x-32 lg:gap-y-0 place-items-center">
    <%= render 'pages/home/benefit', icon: 'more', title: t('.more.title'), description: t('.more.description') %>
    <%= render 'pages/home/benefit', icon: 'chart', title: t('.chart.title'), description: t('.chart.description') %>
    <%= render 'pages/home/benefit', icon: 'message', title: t('.message.title'), description: t('.message.description') %>
  </div>
</section>
