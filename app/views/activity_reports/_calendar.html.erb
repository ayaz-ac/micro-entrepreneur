<div class="w-full grid grid-cols-7 bg-brand-200 gap-px lg:mt-8">
  <div class="col-span-7 grid grid-cols-7 bg-off-white place-items-center lg:place-items-start px-2 lg:px-6 py-4 lg:border-t lg:border-brand-200">
    <% Date::DAYNAMES.rotate.each do |weekday| %>
      <div class="text-xs lg:text-lg">
        <%= t('date.day_names')[Date::DAYNAMES.rotate.index(weekday)] %>
      </div>
    <% end %>
  </div>
  <% month_offset(activity_report.start_date).times do %>
    <div class="h-24 bg-brand-50"></div>
  <% end %>
  <% (activity_report.days).each do |day| %>
    <%= render 'activity_reports/day', day:, activity_report: activity_report %>
  <% end %>
  <% month_inset(activity_report.start_date).times do %>
    <div class="h-24 bg-brand-50"></div>
  <% end %>
</div>
