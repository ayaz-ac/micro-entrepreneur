<%= turbo_frame_tag :statistics, class: 'w-full flex justify-center space-x-6 text-brand-950 px-4 py-8 font-medium bg-white' do %>
  <%= render 'statistics', total_worked_days: @activity_report.total_worked_days, estimated_income: @activity_report.estimated_income %>
<% end %>
<div class="w-full flex justify-between items-center text-brand-950 px-4 py-4 border border-x-0 border-brand-200">
  <%= render 'months_navigation', date: @activity_report.start_date %>
  <%= render 'select_off_days', activity_report_id: @activity_report.id %>
</div>
<% unless user_signed_in? %>
  <%= turbo_frame_tag :calendar, class: 'flex w-full' do %>
    <%= render 'calendar', activity_report: @activity_report %>
  <% end %>
<% end %>
