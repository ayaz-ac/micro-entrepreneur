<nav class="bg-gray flex flex-col lg:flex-row justify-between lg:items-center lg:px-44 lg:py-6" data-controller="switch-class">
  <%= link_to root_url, class: 'hidden lg:inline-flex justify-center space-x-2 items-center' do %>
    <%= image_tag 'logo.svg', class: 'w-7' %>
    <span class="font-logo text-lg font-semibold">MicroEntrepreneur</span>
  <% end %>
  <%# Mobile Menu %>
  <div class="w-full select-none flex py-6 px-8 justify-between items-center lg:hidden">
    <%= link_to root_url, class: 'inline-flex space-x-2 items-center' do %>
      <%= image_tag 'logo.svg', class: 'w-6' %>
      <span class="font-logo font-semibold text-black">MicroEntrepreneur</span>
    <% end %>
    <svg class="w-5 h-5" data-action="click->switch-class#trigger" data-switch-class-target="element" data-active-class="block" data-inactive-class="hidden" 
