        <span><%= t('shared.header.sign_in') %></span>
      <% end %>
      <%= link_to new_user_registration_path, class: 'text-center text-white rounded-full bg-brand-500 px-4 py-2.5 lg:text-base lg:transition lg:ease-in-out lg:hover:-translate-y-1 lg:hover:scale-105 lg:duration-300' do %>
