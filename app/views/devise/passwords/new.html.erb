<div class="flex flex-col items-center w-full px-6 lg:px-44 mt-12 lg:mt-20">
  <h2 class="text-gray-900 text-center text-2xl lg:text-5xl lg:leading-normal font-semibold"><%= t('.forgot_your_password') %></h2>
  <%= form_with model: resource, url: password_path(resource_name), builder: TailwindBuilder, class: 'w-full lg:w-2/5 mt-3'  do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="mt-7">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', required: true %>
    </div>
    <div class="mt-8 flex justify-center">
      <%= f.submit t('.send_me_reset_password_instructions') %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
