  <div class="flex flex-col items-center w-full px-6 lg:px-44 mt-12 lg:mt-20">
    <h2 class="text-gray-900 text-center text-2xl lg:text-5xl lg:leading-normal font-semibold"><%= t('.change_your_password') %></h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), builder: TailwindBuilder, html: { method: :put, class: 'w-full lg:w-2/5 mt-3' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <div class="mt-2">
        <%= f.label :password, t('.new_password') %>
        <% if @minimum_password_length %>
          <em> <%= t('.minimum_password_length', length: @minimum_password_length) %></em>
        <% end %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
      </div>
      <div class="mt-7">
        <%= f.label :password_confirmation, t('.confirm_new_password') %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <div class="mt-8 flex justify-center">
        <%= f.submit t('.change_my_password') %>
      </div>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
<% end %>
