<div class="flex flex-col items-center w-full px-6 lg:px-44 mt-12 lg:mt-20">
  <h2 class="text-gray-900 text-center text-2xl lg:text-5xl lg:leading-normal font-semibold">Inscription</h2>
  <%= form_with model: resource, url: registration_path(resource_name), builder: TailwindBuilder, class: 'w-full lg:w-2/5 mt-3' do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="mt-7">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', required: true %>
    </div>
    <div class="mt-7">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: 'new-password', required: true %>
    </div>
    <div class="mt-7">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', required: true %>
    </div>
    <div class="mt-7">
      <%= f.label :average_daily_rate %><br />
      <%= f.number_field :average_daily_rate, required: true %>
    </div>
    <div class="mt-8 flex justify-center">
      <%= f.submit "S'inscrire" %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
