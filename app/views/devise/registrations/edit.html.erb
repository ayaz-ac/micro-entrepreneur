<div class="w-full flex justify-center py-6">
<%= form_with model: resource, url: registration_path(resource_name), builder: TailwindBuilder, class: 'w-2/3', method: :put do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900 flex items-center">
        <%= lucide_icon "user", class: "w-5 h-5 mr-2 text-gray-500" %>
        Informations du compte
      </h2>
      <p class="text-sm text-gray-500 mt-1">Gérez vos informations personnelles et votre mot de passe</p>
    </div>
    <div class="p-6 space-y-8">
      <!-- Personal Information Subsection -->
      <div class="space-y-6">
        <div class="flex items-center text-sm font-medium text-gray-700 mb-4">
          <%= lucide_icon 'id-card', class: 'size-5 mr-2' %>
          <span>Informations personnelles</span>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="space-y-2">
            <%= f.label :first_name %>
            <%= f.text_field :first_name,
                         autofocus: true,
                         autocomplete: "first_name",
                         placeholder: "John",
                         required: true %>
          </div>
          <div class="space-y-2">
            <%= f.label :last_name %>
            <%= f.text_field :last_name,
                         autocomplete: "last_name",
                         placeholder: "Doe",
                         required: true %>
          </div>
        </div>

        <div class="space-y-2">
          <%= f.label :email %>
          <%= f.email_field :email,
                        autocomplete: "email",
                        placeholder: "john.doe@gmail.com",
                        required: true %>
        </div>
      </div>

      <!-- Divider -->
      <div class="border-t border-gray-200 pt-8">
        <!-- Security Subsection -->
        <div class="space-y-6">
          <div class="flex items-center text-sm font-medium text-gray-700 mb-4">
            <%= lucide_icon 'lock', class: 'size-5 mr-2' %>
            <span>Sécurité</span>
          </div>

          <div class="space-y-2">
            <%= f.label :password, "Nouveau mot de passe" %>
            <%= f.password_field :password,
                             autocomplete: "new-password",
                             placeholder: "Laisser vide pour ne pas modifier" %>
            <p class="text-xs text-gray-500">Laissez vide si vous ne souhaitez pas changer votre mot de passe</p>
          </div>

          <div class="space-y-2">
            <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe" %>
            <%= f.password_field :password_confirmation,
                             autocomplete: "new-password",
                             placeholder: "Confirmer le nouveau mot de passe" %>
          </div>

          <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4">
            <div class="space-y-2">
              <%= f.label :current_password, "Mot de passe actuel" %>
              <%= f.password_field :current_password,
                               autocomplete: "current-password",
                               required: true,
                               placeholder: "Saisissez votre mot de passe actuel" %>
              <p class="text-xs text-yellow-700">Requis pour valider les modifications</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="flex justify-center pt-4 border-t border-gray-200">
        <%= f.submit t('devise.registrations.edit.update'), class: "btn-cta" %>
      </div>
    </div>
  </div>
<% end %>
</div>
