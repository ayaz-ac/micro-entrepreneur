<div class="flex flex-col items-center w-full px-6 lg:px-44 mt-12 lg:mt-20">
  <h2 class="text-gray-900 text-center text-2xl lg:text-5xl lg:leading-normal font-semibold"><%= t('.sign_in') %></h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), builder: TailwindBuilder, html: { data: { turbo: false }, class: 'w-full lg:w-2/5 mt-3' }) do |f| %>
    <div class="mt-2">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', required: true %>
    </div>
    <div class="mt-7">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: 'current-password', required: true %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="mt-4 inline-flex items-center">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: 'ml-2 text-gray-700' %>
      </div>
    <% end %>
    <div class="mt-8 flex justify-center">
      <%= f.submit t('.sign_in') %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
